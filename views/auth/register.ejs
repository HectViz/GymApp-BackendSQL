<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrarse - GymApp</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>游닇 Registrarse</h1>
            <nav>
                <a href="/" class="btn">Inicio</a>
                <a href="/auth/login" class="btn btn-primary">Iniciar Sesi칩n</a>
            </nav>
        </header>

        <main>
            <div class="form-container">
                <% if (error) { %>
                    <div class="alert alert-error">
                        <%= error %>
                    </div>
                <% } %>

                <form action="/auth/register" method="POST" class="form">
                    <div class="form-group">
                        <label for="nombre">Nombre Completo:</label>
                        <input type="text" id="nombre" name="nombre" required>
                    </div>

                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                    </div>

                    <div class="form-group">
                        <label for="telefono">Tel칠fono:</label>
                        <input type="tel" id="telefono" name="telefono" required>
                    </div>

                    <div class="form-group">
                        <label for="password">Contrase침a:</label>
                        <input type="password" id="password" name="password" required>
                        <small>M칤nimo 6 caracteres</small>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword">Confirmar Contrase침a:</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" required>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">Registrarse</button>
                        <a href="/" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>

                <div class="auth-links">
                    <p>쯏a tienes cuenta? <a href="/auth/login">Inicia sesi칩n aqu칤</a></p>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Validaci칩n del formulario
        document.querySelector('form').addEventListener('submit', function(e) {
            const nombre = document.getElementById('nombre').value.trim();
            const email = document.getElementById('email').value.trim();
            const telefono = document.getElementById('telefono').value.trim();
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (!nombre || !email || !telefono || !password || !confirmPassword) {
                e.preventDefault();
                alert('Por favor, complete todos los campos');
                return;
            }

            // Validaci칩n b치sica de email
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                e.preventDefault();
                alert('Por favor, ingrese un email v치lido');
                return;
            }

            // Validar longitud de contrase침a
            if (password.length < 6) {
                e.preventDefault();
                alert('La contrase침a debe tener al menos 6 caracteres');
                return;
            }

            // Validar que las contrase침as coincidan
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Las contrase침as no coinciden');
                return;
            }
        });
    </script>
</body>
</html> 