<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Perfil - GymApp</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>üë§ Mi Perfil</h1>
            <nav>
                <a href="/cliente/dashboard" class="btn">Mi Dashboard</a>
                <a href="/cliente/membresias" class="btn">Mis Membres√≠as</a>
                <a href="/cliente/pagos" class="btn">Mis Pagos</a>
            </nav>
        </header>

        <main>
            <div class="form-container">
                <div class="card">
                    <div class="card-header">
                        <h3>Informaci√≥n Personal</h3>
                    </div>
                    <div class="card-body">
                        <form id="perfilForm">
                            <div class="form-group">
                                <label for="nombre">Nombre Completo:</label>
                                <input type="text" id="nombre" name="nombre" value="<%= cliente.nombre %>" required>
                            </div>

                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="email" id="email" name="email" value="<%= cliente.email %>" required>
                            </div>

                            <div class="form-group">
                                <label for="telefono">Tel√©fono:</label>
                                <input type="tel" id="telefono" name="telefono" value="<%= cliente.telefono %>" required>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">Actualizar Perfil</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card" style="margin-top: 20px;">
                    <div class="card-header">
                        <h3>Informaci√≥n de Cuenta</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>ID de Cliente:</strong> <%= cliente.id %></p>
                        <p><strong>Rol:</strong> <%= cliente.rol %></p>
                        <p><strong>Fecha de Registro:</strong> <%= new Date(cliente.created_at).toLocaleDateString('es-ES') %></p>
                        <p><strong>√öltima Actualizaci√≥n:</strong> <%= new Date(cliente.updated_at).toLocaleDateString('es-ES') %></p>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Actualizar perfil
        document.getElementById('perfilForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = {
                nombre: formData.get('nombre'),
                email: formData.get('email'),
                telefono: formData.get('telefono')
            };

            fetch('/cliente/perfil', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.mensaje) {
                    alert(data.mensaje);
                    location.reload();
                } else {
                    alert('Error al actualizar el perfil');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error al actualizar el perfil');
            });
        });
    </script>
</body>
</html> 